  /*distancia del borde al texto*/
  padding: 0px;
  position: left;
}

ul li{
  /*quitar el estilo de la lista*/
  list-style: none;
  /*ancho*/
  width: 200px;
  /*alto*/
  height: 40px;
  /*centrado horizontal*/
  text-align: center;
  /*centrado en vertical*/
  line-height: 40px;
  /*posicionamiento flotante, para introducirlo todo en la misma línea*/
  float: center;
  /*borde*/
