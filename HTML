  /*ancho*/
  width: 1800px;
  /*centrar en titulo en la web*/
  margin: 10px auto;
  /*centrar texto*/
  text-align: center;
  /*centrado en vertical*/
  line-height: 120px;
}
/*Estilo de la etiqueta b que esté dentro de h1*/
h1 b{
  font-size: 100px;
  color: black;
}
body {
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;

}
/*Estilo de la lista*/
ul{
